{
  "extends": "eslint:recommended",
  "plugins": ["node"],
  "env": {
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "Promise": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "strict": ["error"],
    "eqeqeq": ["error", "smart"],
    "node/no-unsupported-features": ["error"],
    "node/no-missing-require": "error"
  },
  "overrides": [
    {
      "files": ["rollup.config.js"],
      "parserOptions": {"sourceType": "module"}
    },
    {
      "files": ["test/*.js", "**/__tests__/*.js"],
      "env": {
        "jest": true,
        "es6": true,
        "node": true
      }
    }
  ]
}
